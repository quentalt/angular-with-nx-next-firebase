{
  "version": 1,
  "cli": {
    "defaultCollection": "@nrwl/angular"
  },
  "defaultProject": "app",
  "schematics": {
    "@nrwl/workspace": {
      "library": {
        "linter": "tslint"
      }
    },
    "@nrwl/cypress": {
      "cypress-project": {
        "linter": "tslint"
      }
    },
    "@nrwl/node": {
      "application": {
        "linter": "tslint"
      },
      "library": {
        "linter": "tslint"
      }
    },
    "@nrwl/nest": {
      "application": {
        "linter": "tslint"
      },
      "library": {
        "linter": "tslint"
      }
    },
    "@nrwl/express": {
      "application": {
        "linter": "tslint"
      },
      "library": {
        "linter": "tslint"
      }
    },
    "@nrwl/angular:application": {
      "style": "scss",
      "linter": "tslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "style": "scss",
      "linter": "tslint",
      "unitTestRunner": "jest"
    },
    "@nrwl/angular:component": {
      "style": "scss"
    }
  },
  "projects": {
    "app": {
      "projectType": "application",
      "root": "apps/app",
      "sourceRoot": "apps/app/src",
      "prefix": "project-nx-nest-firebase",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/apps/coffee-api",
            "index": "apps/app/src/index.html",
            "main": "apps/coffee-api/src/main.ts",
            "polyfills": "apps/app/src/polyfills.ts",
            "tsConfig": "apps/coffee-api/tsconfig.app.json",
            "aot": true,
            "assets": ["apps/coffee-api/src/assets", "apps/coffee-api/src/package.json"],
            "styles": ["apps/app/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
  
              "fileReplacements": [
                {
                  "replace": "apps/coffee-api/src/environments/environment.ts",
                  "with": "apps/coffee-api/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "app:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "app:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "app:build"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "apps/app/tsconfig.app.json",
              "apps/app/tsconfig.spec.json",
              "apps/app/tsconfig.editor.json"
            ],
            "exclude": ["**/node_modules/**", "!apps/app/**/*"]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": ["coverage/apps/app"],
          "options": {
            "jestConfig": "apps/app/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "app-e2e": {
      "root": "apps/app-e2e",
      "sourceRoot": "apps/app-e2e/src",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "apps/app-e2e/cypress.json",
            "tsConfig": "apps/app-e2e/tsconfig.e2e.json",
            "devServerTarget": "app:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "app:serve:production"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["apps/app-e2e/tsconfig.e2e.json"],
            "exclude": ["**/node_modules/**", "!apps/app-e2e/**/*"]
          }
        }
      }
    },
    "coffee-api": {
      "root": "apps/coffee-api",
      "sourceRoot": "apps/coffee-api/src",
      "projectType": "application",
      "prefix": "coffee-api",
      "schematics":{},
      "architect": {
        "build-node": {
          "builder": "@nrwl/node:build",
          "options": {
            "outputPath": "dist/apps/coffee-api",
            "main": "apps/coffee-api/src/main.ts",
            "tsConfig": "apps/coffee-api/tsconfig.app.json",
            "assets": ["apps/coffee-api/src/assets",
            "apps/coffee-api/src/package.json"]
          },
    
          "configurations":{
            "production":{
              "optimization":true,
              "extractLicenses":true,
              "inspect":false,
              "fileReplacements": [
                {
                  "replace":"apps/coffee-api/src/environments/environment.ts",
                  "with":"apps/coffee-api/src/environments/environment.prod.ts"
                }
              ]
            }
          }
      },

        
        "build": {
          "builder" : "@nrwl/workspace:run-commands",
          "options": {
            "command": "nx run coffee-api:build-node"
          }
        
        },

        "serve": {
          "builder": "@nrwl/node:execute",
          "options": {
            "buildTarget": "coffee-api:build"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "apps/coffee-api/tsconfig.app.json",
              "apps/coffee-api/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**", "!apps/coffee-api/**/*"]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": ["coverage/apps/coffee-api"],
          "options": {
            "jestConfig": "apps/coffee-api/jest.config.js",
            "passWithNoTests": true
          }
        },

        
        "deploy-functions": {
          "builder":"@nrwl/workspace:run-commands",
          "options": {
            "command": "firebase deploy --only functions"
          }
        },

        "deploy": {
          "builder": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command":"nx run coffee-api:build"
              },
              
              {
                "command": "nx run coffee-api:deploy-functions"
              }
            ],
            "parallel":false
          }
        }
      }
      }
    }
  } 
